@model HealthInsurance.Models.Policy
@using System.Globalization;
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    CultureInfo culture = new CultureInfo("en-US"); // Ví dụ: định dạng tiền tệ Mỹ
}
<h1>Details</h1>

<div>
    <h4>Policy</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Emi)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Emi.ToString("C", culture).TrimEnd('0'))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Amount.ToString("C", culture).TrimEnd('0'))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Content)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
