@model HealthInsurance.Areas.Admin.Models.Contact
@{
    ViewData["Title"] = "Contact Us";
}
<script src="~/assests/js/contact.js"></script>
<div class="container py-5">
    <div class="pt-5">
        <h1 class="display-5 fw-bold">
            Contact us
        </h1>
        <p class="lead">Please fill the required values</p>
    </div>
    <form id="contact-form" method="post">
        <div class="d-flex row mb-2">
            <div class="col-6 form-group">
                <label asp-for="FullName" class="form-label">Name</label>
                <input asp-for="FullName" type="text" class="form-control" id="name" placeholder="Enter your name" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex row mb-2">
            <div class="col form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" id="email" placeholder="Enter your email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col form-group">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" type="number" class="form-control" id="phone" placeholder="Enter your phone number" required />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-2 form-group">
            <label asp-for="Subject" class="form-label">Subject</label>
            <input asp-for="Subject" type="text" class="form-control" id="subject" placeholder="Enter subject" required />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="mb-2 form-group">
            <label asp-for="Message" class="form-label">Message</label>
            <textarea asp-for="Message"
                id="message"
                form="contact-form"
                class="form-control"
                placeholder="Enter message"
                rows="5"
                required
            ></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="d-flex gap-2">
            <button
                class="btn btn-secondary px-4"
                type="reset"
            >
                Reset
            </button>
            <button
                class="btn btn-primary px-4"
                    type="button"
                    onclick="sendContact()">
                Submit
            </button>
        </div>
    </form>
</div>
