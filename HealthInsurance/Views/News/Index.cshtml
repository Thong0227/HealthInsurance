@model IEnumerable<HealthInsurance.Areas.Admin.Models.News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="policies-page container">
    <div class="d-flex align-items-center gap-3 mb-4">
        <div class="rounded-circle border d-flex justify-content-center align-items-center" style="width: 64px; height: 64px;">
            <i class="fa-solid fa-newspaper fa-2xl text-primary"></i>
        </div>
        <h1 class="display-5 fw-bold mb-0">
            News
        </h1>
    </div>
    <div class="policies-list-search row">
        @foreach (var item in Model)
        {
            <div class="policies-item col-lg-4 col-6 w-100">
                <div class="img-policies">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <img class="img-loop lazyload w-100"
                         src="@Html.DisplayFor(modelItem => item.Image)"
                         alt="@Html.DisplayFor(modelItem => item.Title)" />
                    </a>
                </div>
                <div class="policies-name">
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                </div>
                <div class="policies-desc">@Html.Raw(item.Description)</div>
                <a asp-action="Details" asp-route-id="@item.Id" class="see-more">Xem thêm</a>
            </div>
        }
    </div>
</section>
