@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Contact Us</h1>
        <p class="lead">Please fill the required values</p>
    </div>
    <div class="d-flex flex-row w-full justify-content-evenly align-items-center">
        <div>
            <div class="row mb-1">
                <label for="infoOne" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control-plaintext" id="infoOne" value="25 RajaRam #07-28">
                </div>
            </div>
            <div class="row mb-1">
                <label for="infoTwo" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control-plaintext" id="infoTwo" value="Gandhi Nagar, India 065128">
                </div>
            </div>
            <div class="row mb-1">
                <label for="hp" class="col-sm-3 col-form-label">Hp</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control-plaintext" id="hp" value="90078654">
                </div>
            </div>
            <div class="row mb-1">
                <label for="staticFax" class="col-sm-3 col-form-label">Fax</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control-plaintext" id="staticFax" value="10002413">
                </div>
            </div>
            <div class="row mb-1">
                <label for="staticEmail" class="col-sm-3 col-form-label">Info</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control-plaintext" id="staticEmail" value="contact@medicalcare.com">
                </div>
            </div>
        </div>
        <div>
            <div class="row mb-1">
                <label for="name" class="col-sm-3 col-form-label">Name</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="name" placeholder="Enter your name">
                </div>
            </div>
            <div class="row mb-1">
                <label for="email" class="col-sm-3 col-form-label">Email</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control" id="email" placeholder="Enter your email">
                </div>
            </div>
            <div class="row mb-1">
                <label for="phone" class="col-sm-3 col-form-label">Phone</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" id="phone" placeholder="Enter your phone number">
                </div>
            </div>
            <div class="row mb-1">
                <label for="subject" class="col-sm-3 col-form-label">Subject</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="subject" placeholder="Enter subject">
                </div>
            </div>
            <div class="row mb-1">
                <label for="message" class="col-sm-3 col-form-label">Message</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="message" placeholder="Enter message">
                </div>
            </div>
        </div>
    </div>
</div>
