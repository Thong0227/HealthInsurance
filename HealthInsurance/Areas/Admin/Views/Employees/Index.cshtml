@model IEnumerable<HealthInsurance.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Manager Employee</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-borderless" id="tableData">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Address)
            </th>*@
            @*<th>
            @Html.DisplayNameFor(model => model.JoinDate)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PolicyStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Address)
            </td>*@
                @*<td>
            @Html.DisplayFor(modelItem => item.JoinDate)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.UserRole)
                </td>
                <td class="d-flex align-items-center">
                    @if (item.PolicyStatus.Equals(true))
                    {
                        <div class="status-dot status-active"></div>

                        <span>Active</span>
                    }
                    else
                    {
                        <div class="status-dot status-warning"></div> <span>Pending</span>
                    }
                </td>
                <td>
                    <div class="d-flex gap-3">
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash" style="color: #ff0000;"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    let table = new DataTable('#tableData');
</script>